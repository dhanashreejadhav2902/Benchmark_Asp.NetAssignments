@model EntityFrameworkDemo.Models.Product
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Product Details</h2>
<table class="table">
    <tr>
        <th>Product ID</th>
        <td>@Model.pid</td>
    </tr>

    <tr>
        <th>Product Name</th>
        <td>@Model.pname</td>
    </tr>

    <tr>
        <th>Price</th>
        <td>@Model.price</td>
    </tr>

    <tr>
        <th>Date Of Purchase</th>
        <td>@Model.dateofpurchase</td>
    </tr>

    <tr>
        <th>Available Status</th>
        <td>@Model.availablestatus</td>
    </tr>

    <tr>
        <th>Category</th>
        <td>@Model.Category.cname</td>
    </tr>

    <tr>
        <th>Brand</th>
        <td>@Model.Brand.bname</td>
    </tr>

</table>

<a href="/products/index">Back To Products</a>
