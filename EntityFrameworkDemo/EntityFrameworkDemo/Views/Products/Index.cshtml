@model List<EntityFrameworkDemo.Models.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}


<h2>Products</h2>
<a href="/products/create">Add Products</a>
<form class="form-check-inline text-center" action="/products/index">
<label for="search" class="m-1"></label>
    <input type="search" class="form-control m-1" id="search" name="search" value="@ViewBag.Search" placeholder="Search here"/>
    <button type="submit" class="btn btn-info">Search</button>
</form>


<table class="table">
    <tr>
        <th>Product ID</th>
        <th>Product Name</th>
        <th>Price</th>
        <th>Date Of Purchase</th>
        <th>Availability Status</th>
        <th>Category ID</th>
        <th>Brand ID</th>
        <th>Option</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>@item.pid</td>
    <td>@item.pname</td>
    <td>@item.price.Value.ToString("C")</td>
    <td>@item.dateofpurchase.Value.ToString("d/M/yyyy")</td>
    <td>@item.availablestatus</td>
    <td>@item.cid</td>
    <td>@item.bid</td>
    <td><a href="/products/details/@item.pid">Details</a></td>
    <td><a href="/products/edit/@item.pid">Edit</a></td>
    <td><a href="/products/delete/@item.pid">Delete</a></td>
</tr>
    }

    
</table>

